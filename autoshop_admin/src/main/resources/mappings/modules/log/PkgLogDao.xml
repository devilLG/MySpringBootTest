<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhilai.master.modules.log.dao.PkgLogDao">
 	<resultMap type="com.zhilai.master.modules.log.entity.PkgLog" id="PkgLogResultMap">
 		<id property="log_id" column="log_id" />
		<result property="auth_name" column="auth_name" />
		<result property="plat_code" column="plat_code" />
		<result property="trade_code" column="trade_code" />
		<result property="trade_name" column="trade_name" />
		<result property="trade_time" column="trade_time" />
		<result property="pkg_up" column="pkg_up" />
		<result property="pkg_down" column="pkg_down" />
		<result property="protocol" column="protocol" />
 	</resultMap>
    
	<select id="get" resultMap="PkgLogResultMap">
		SELECT  *  FROM sys_pkg_log WHERE  log_id = #{log_id}
	</select>
	
	<select id="findList" resultMap="PkgLogResultMap">
		SELECT log_id,auth_name,plat_code,trade_code,trade_time,pkg_up,pkg_down,protocol
		FROM sys_pkg_log t where 1=1
		<if test="trade_time != null and trade_time != '' ">
			AND t.trade_time  >= CONCAT(#{trade_time},' 00:00:00')
		</if>
		<if test="trade_time_end != null and trade_time_end != '' ">
			AND t.trade_time <![CDATA[< ]]>DATE_ADD(CONCAT(#{trade_time_end},' 00:00:00'), INTERVAL 1 DAY) 
		</if>
		<if test="log_id != null and log_id != '' ">
			AND t.log_id = #{log_id}
		</if>
		<if test="trade_code != null and trade_code != '' ">
			AND t.trade_code = #{trade_code}
		</if>
		<if test="auth_name != null and auth_name != '' ">
			AND t.auth_name like CONCAT('%',#{auth_name},'%' )
		</if>
		order by trade_time desc
	</select>
	<insert id="insert">
		INSERT INTO sys_pkg_log(log_id,auth_name,plat_code,trade_code,trade_time,pkg_up,pkg_down,protocol)
		VALUES(#{log_id},#{auth_name},#{plat_code},#{trade_code},#{trade_time},#{pkg_up},#{pkg_down},#{protocol})
	</insert>
	<delete id="delete">
		delete from sys_pkg_log where log_id = #{log_id}
	</delete>
	
</mapper>